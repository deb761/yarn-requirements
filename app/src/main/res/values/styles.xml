<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryDark">@color/header_background</item>
        <item name="colorAccent">@color/title_color</item>
        <item name="android:textColorPrimary">@color/title_color</item>
        <item name="android:textColorSecondary">@color/caption_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="headerStyle">
        <item name="android:background">@color/header_background</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:textColor">@color/caption_color</item>
    </style>

    <style name="textEntryStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:background">@drawable/rounded_box</item>
    </style>

    <style name="labelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/caption_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="weightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginTop">@dimen/weight_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginLeft">@dimen/weight_padding</item>
    </style>

    <style name="navButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="paramTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/weight_padding</item>
        <item name="android:textColor">@color/caption_color</item>
        <item name="android:textSize">@dimen/param_text_size</item>
    </style>

    <style name="YarnTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorForeground">@color/foreground_material_light_1</item>
    </style>

</resources>
